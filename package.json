{
  "name": "comino-document-migrator",
  "description": "A worker that migrates files from Civica's Azure Blob storage to an AWS S3 bucket",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "build": "node esbuild.config.js",
    "start": "node -r source-map-support/register dist/index.js"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.11.0",
    "convict": "^6.2.3",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "esbuild": "^0.15.12",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix && pretty-quick --staged"
    }
  }
}
